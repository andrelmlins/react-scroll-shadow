{
  "verbose": true,
  "collectCoverage": true,
  "coverageReporters": ["json", "lcov", "text-summary"],
  "coverageThreshold": {
    "global": {
      "branches": 85,
      "functions": 85,
      "lines": 85,
      "statements": 85
    }
  },
  "collectCoverageFrom": ["./src/**/*.{js,jsx}"],
  "transform": {
    "^.+\\.jsx$": "babel-jest",
    "^.+\\.js$": "babel-jest"
  },
  "testMatch": ["<rootDir>/src/**/*.spec.js"],
  "setupFiles": ["./src/setupTests.js"]
}
